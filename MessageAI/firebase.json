{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs18",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "MessageAI/firestore.rules",
    "indexes": "MessageAI/firestore.indexes.json"
  },
  "storage": {
    "rules": "MessageAI/storage.rules"
  }
}
