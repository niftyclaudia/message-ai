{
  "rules": {
    ".read": false,
    ".write": false,
    
    "presence": {
      "$userID": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userID"
      }
    },
    
    "typing": {
      "$chatID": {
        ".read": "auth != null",
        "$userID": {
          ".write": "auth != null && auth.uid == $userID"
        }
      }
    }
  }
}

