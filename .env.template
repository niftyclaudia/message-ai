# ==============================================================================
# NODE.JS ENVIRONMENT
# ==============================================================================

# Required Node.js version (minimum)
NODE_VERSION=18.0.0

# ==============================================================================
# FIREBASE PROJECT CONFIGURATION
# ==============================================================================

# Firebase project ID
# Get this from: https://console.firebase.google.com/ â†’ Project Settings
FIREBASE_PROJECT_ID=REPLACE_WITH_YOUR_PROJECT_ID

# Firebase project environment (dev, staging, prod)
FIREBASE_ENVIRONMENT=dev

# ==============================================================================
# OPTIONAL: DEVELOPMENT TOOLS
# ==============================================================================

# Firebase emulator ports (only needed for local development)
FIRESTORE_EMULATOR_PORT=8080
FUNCTIONS_EMULATOR_PORT=5001
AUTH_EMULATOR_PORT=9099

# Enable debug logging (true/false)
DEBUG=false
